{
  "name": "shiftway",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run check",
    "ci": "npm run check",
    "check": "node scripts/verify-deploy-config.js && npm run build && npm --prefix server run ci",
    "server:install": "npm --prefix server ci",
    "server:dev": "npm --prefix server run dev",
    "server:start": "npm --prefix server run start",
    "server:db:check": "npm --prefix server run db:check",
    "server:db:up": "npm --prefix server run db:up",
    "server:db:down": "npm --prefix server run db:down",
    "server:db:init": "npm --prefix server run db:init",
    "db:check": "npm run server:db:check",
    "db:up": "npm run server:db:up",
    "db:down": "npm run server:db:down",
    "db:init": "npm run server:db:init",
    "install:all": "npm ci && npm run server:install",
    "server:smoke:health": "npm --prefix server run smoke:health",
    "final:check": "npm run ci && npm --prefix server run preflight && npm --prefix server run db:check"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "vite": "^5.4.9"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
