    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^8.0.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.12.0",
    "twilio": "^4.23.0",
    "web-push": "^3.6.7"
